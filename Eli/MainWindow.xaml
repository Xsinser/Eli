        xmlns:local="clr-namespace:Eli"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="61,68,0,0" TextWrapping="Wrap" Text="" Name="loginBox" VerticalAlignment="Top" Width="120"/>
